<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <module.video.jnc.myffmpeg.widget.TitleBar
        android:id="@+id/title"
        style="@style/title_bar"
        app:title_text="视频编辑" />

    <ImageView
        android:src="@mipmap/dark"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_video_edit"
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频剪辑" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/pinjie"
            android:text="视频拼接" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/caijian"
            android:text="视频裁剪" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/fenbianlv"
            android:text="分辨率" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/sudu"
            android:text="播放速度" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3">

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频剪辑" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频拼接" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频裁剪" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3">

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频剪辑" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频拼接" />

        <TextView
            style="@style/edit_button"
            android:drawableTop="@mipmap/edit"
            android:text="视频裁剪" />

    </LinearLayout>
</LinearLayout>